@model IEnumerable<mvcEF.Models.Computer>

@{
    ViewBag.Title = "Index";
}

<h2>Computers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @Html.ActionLink("Add drives", "CompDrives")
</p>
<table class="table">
    <tr>
        <th>
            <!--Html.DisplayNameFor(model => model.Casing.Name)-->
            Casing
        </th>
        <th>
            Cooler
        </th>
        <th>
            GPU
        </th>
        <th>
            Motherboard
        </th>
        <th>
            Powe Supply
        </th>
        <th>
            Processor
        </th>
        <th>
            RAM
        </th>
        <th>
            Drives
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Casing.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Cooler.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GraphicsCard.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Motherboard.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PowerSupply.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Processor.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RAM.Name)
    </td>
    <td>
        @foreach (var compdrive in ViewBag.computdrives)
        {
            if (compdrive.IDComputer == item.IDComputer)
            {
                @compdrive.Drive.Name <br />
            }
        }
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.IDComputer }) |
        @Html.ActionLink("Details", "Details", new { id = item.IDComputer }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.IDComputer })
    </td>
</tr>
}

</table>
